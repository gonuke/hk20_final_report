	author = {Youssef, M. Z and Sawan, M. E},
	month = dec,
	year = {2002},
	keywords = {Advanced power extraction, CLiFF Sn/Flibe, Sn/LiPb, Structure lifetime, Waste volume},
	pages = {277--283},
	file = {ScienceDirect Full Text PDF:/home/wilsonp/.zotero/zotero/qx0zr6g5.default/zotero/storage/THA62QS9/Youssef and Sawan - 2002 - Component lifetime comparison and waste volume in .pdf:application/pdf;ScienceDirect Snapshot:/home/wilsonp/.zotero/zotero/qx0zr6g5.default/zotero/storage/TA73Z234/S0920379602002521.html:text/html}
}

@article{youssef_radwaste_2002,
